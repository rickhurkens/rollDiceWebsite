<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>rollDiceWebsite</display-name>
  <welcome-file-list>
    <welcome-file>rollDice</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>RollDice</servlet-name>
    <servlet-class>nl.rickhurkens.rollDice.web.RollDiceDispatcher</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RollDice</servlet-name>
    <url-pattern>/rollDice</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SetSettings</servlet-name>
    <servlet-class>nl.rickhurkens.rollDice.web.SetSettings</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SetSettings</servlet-name>
    <url-pattern>/setSettings</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>numberOfDice</param-name>
    <param-value>1</param-value>
  </context-param>
  <context-param>
    <param-name>numberOfEyes</param-name>
    <param-value>6</param-value>
  </context-param>
</web-app>